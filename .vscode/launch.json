    "version": "0.2.0",
    "configurations": [
        {
            "name": "start:dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run start:dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "format autofix",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run format && npm run lint:fix",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "build:executable:mac",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run build:executable:mac",
            "cwd": "${workspaceFolder}"
        }
    ]
}